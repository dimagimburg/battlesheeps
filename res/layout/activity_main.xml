<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".UI.Activities.MainActivity"
    android:padding="0dp"
    android:background="#0065cb">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView9"
        android:src="@drawable/login_bg"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fight"
        android:id="@+id/startGameButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignEnd="@+id/difficultyButton"
        android:layout_alignStart="@+id/difficultyButton"
        android:background="#6098b8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Difficulty"
        android:id="@+id/difficultyButton"
        android:layout_above="@+id/startGameButton"
        android:layout_alignStart="@+id/imageView9"
        android:layout_alignEnd="@+id/imageView9"
        android:background="#508ecc" />
</RelativeLayout>
